<div class="row">
  <div class="col-sm-4">
    <%= form_for [@product, Review.new] do |f| %>

      <% if f.object.errors.any? %>
        <div class="alert alert-danger">
          <strong>The following errors prevented submiting:</strong>
          <ul>
            <% f.object.errors.full_messages.each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :rating %>
        <% 5.times do %>
          <%= fa_icon "star-o" %>
        <% end %>
        <br>
        <%= f.select :rating, options_for_select([1,2,3,4,5]), { include_blank: true }, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :description %><br>
        <%= f.text_area :description, class: "form-control" %>
      </div>
      <div>
        <%= f.submit 'Submit', class: "btn btn-primary" %>
      </div>
      <hr>
    <% end %>
  </div>
</div>
